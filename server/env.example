# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Treasury Wallet (generate with: node -e "console.log(require('bs58').encode(require('@solana/web3.js').Keypair.generate().secretKey))")
TREASURY_PRIVATE_KEY=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# S3 Backup Configuration
# Required: S3 bucket with versioning enabled and permissions for PutObject
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=
BACKUP_S3_PREFIX=backups/
# Server-side encryption: AES256 or aws:kms
BACKUP_SSE=AES256
# If using aws:kms, provide your KMS key id/arn
BACKUP_KMS_KEY_ID=

# Production Settings (uncomment for production)
# NODE_ENV=production
# SOLANA_NETWORK=mainnet-beta
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
